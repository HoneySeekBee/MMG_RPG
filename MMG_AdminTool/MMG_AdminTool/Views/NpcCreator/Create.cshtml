@model MMG_AdminTool.Models.NpcTemplateViewModel

<h2>Create NPC Template</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">NPC 이름</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Type" class="control-label">NPC 타입</label>
        <select asp-for="Type" class="form-control"
                asp-items="Html.GetEnumSelectList<MMG_AdminTool.Models.Enums.NpcType>()">
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="DialogueKey" class="control-label">대화 키</label>
        <input asp-for="DialogueKey" class="form-control" />
        <span asp-validation-for="DialogueKey" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">생성</button>
        <a asp-action="Index" class="btn btn-secondary">취소</a>
    </div>
</form>