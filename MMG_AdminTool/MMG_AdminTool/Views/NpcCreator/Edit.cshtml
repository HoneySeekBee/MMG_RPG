@model MMG_AdminTool.Models.NpcTemplateViewModel

<h2>NPC 수정</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TemplateId" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">이름</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Type" class="control-label">NPC 타입</label>
        <select asp-for="Type" class="form-control">
            <option value="0">Normal</option>
            <option value="1">QuestGiver</option>
            <option value="2">Shop</option>
            <option value="3">EventTrigger</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="DialogueKey" class="control-label">대화 키</label>
        <input asp-for="DialogueKey" class="form-control" />
        <span asp-validation-for="DialogueKey" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">저장</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">취소</a>
</form>