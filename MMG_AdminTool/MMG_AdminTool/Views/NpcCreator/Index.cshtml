@using MMG_AdminTool.Models.Enums
@model List<MMG_AdminTool.Models.NpcTemplateViewModel>

<h2>NPC Template List</h2>

<a asp-action="Create" class="btn btn-primary">Create New NPC </a>

<table class="table">
    <thead>
        <tr>
            <th>TemplateId</th>
            <th>Name</th>
            <th>Type</th>
            <th>DialogueKey</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var npc in Model)
        {
            <tr>
                <td>@npc.TemplateId</td>
                <td>@npc.Name</td>
                    <td>@((NpcType)npc.Type)</td>
                <td>@npc.DialogueKey</td>
                <td> 
                    @if (npc.Type == 2) 
                    {
                         <a asp-action="ManageItems" asp-route-id="@npc.TemplateId" class="btn btn-info btn-sm">Item</a>
                    }
                        <a asp-action="Edit" asp-route-id="@npc.TemplateId" class="btn btn-warning btn-sm">Edit</a>
                      <form asp-action="Delete" asp-route-id="@npc.TemplateId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('삭제하시겠습니까?');">
                            Delete
                            </button>
                        </form>
                </td>
            </tr>
        }
    </tbody>
</table>